PORT=3000
JWT_SECRET=troque_para_uma_chave_forte_e_longa
NODE_ENV=development

# Local (desenvolvimento)
DB_PATH=./src/office.db

# Producao (Render/Railway com disco persistente)
# Exemplo Render Disk: /var/data/office.db
# DB_PATH=/var/data/office.db

# Seguranca API
# Em producao, defina os domínios permitidos (separados por virgula)
# Exemplo: ALLOWED_ORIGINS=https://app.suaempresa.com,https://admin.suaempresa.com
ALLOWED_ORIGINS=

# Rate limits
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX=300
AUTH_RATE_LIMIT_WINDOW_MS=60000
AUTH_RATE_LIMIT_MAX=15

# Bloquear cadastro publico (recomendado em producao)
# true = desativa /api/auth/register
DISABLE_PUBLIC_REGISTER=false
